<?xml version="1.0" encoding="utf-8"?>
<com.allever.allsample.scroll.DragViewGroup
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/id_menu_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/id_view_drag_helper_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MenuView"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/id_view_drag_helper_btn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MainView"/>

    </RelativeLayout>

</com.allever.allsample.scroll.DragViewGroup>