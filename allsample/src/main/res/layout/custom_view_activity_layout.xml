<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titleBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="渐变TextView"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HiddenButton"/>
        <com.allever.allsample.customView.widget.HiddenButton
            android:id="@+id/id_custom_view_activity_hidden_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom TitleBar"/>

        <com.allever.allsample.customView.widget.TitleBar
            android:id="@+id/id_custom_view_activity_title_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            titleBar:title="@string/app_name"
            titleBar:titleTextColor="@color/colorAccent"
            titleBar:titleSize="10sp"
            titleBar:leftImage="@mipmap/nav_ic_back"
            titleBar:rightImage="@mipmap/nav_ic_more"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FreshTextView"/>

        <com.allever.allsample.customView.widget.FreshTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emptyView wrap_content 默认200px"/>
        <com.allever.allsample.customView.widget.EmptyView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emptyView 指定200dp"/>
        <com.allever.allsample.customView.widget.EmptyView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emptyView match_width height:200dp"/>
        <com.allever.allsample.customView.widget.EmptyView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FrameTextView"/>
        <com.allever.allsample.customView.widget.FrameTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FrameTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CircleProgressView"/>
        <com.allever.allsample.customView.widget.CircleProgressView
            android:layout_width="match_parent"
            android:layout_height="300dp" />



    </LinearLayout>

</ScrollView>