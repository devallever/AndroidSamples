<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_service_activity_btn_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start service"/>
    <Button
        android:id="@+id/id_service_activity_btn_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop service"/>
    <Button
        android:id="@+id/id_service_activity_btn_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bind service"/>
    <Button
        android:id="@+id/id_service_activity_btn_unbind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unbind service"/>

    <Button
        android:id="@+id/id_service_activity_btn_start_front_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start front service"/>

    <Button
        android:id="@+id/id_service_activity_btn_start_intent_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start intent service"/>

</LinearLayout>