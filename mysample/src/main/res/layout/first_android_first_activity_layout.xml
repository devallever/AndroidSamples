<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_first_activity_btn_explicit_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显式启动"/>
    <Button
        android:id="@+id/id_first_activity_btn_implicit_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐式启动"/>

    <Button
        android:id="@+id/id_first_activity_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Activity"/>

    <Button
        android:id="@+id/id_first_activity_btn_start_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开浏览器"/>
    <Button
        android:id="@+id/id_first_activity_btn_start_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打电话"/>

</LinearLayout>