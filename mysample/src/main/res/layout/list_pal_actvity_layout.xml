<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/id_lite_pal_activity_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_lite_pal_activity_btn_create_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create database"/>

    <Button
        android:id="@+id/id_lite_pal_activity_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add data"/>
    <Button
        android:id="@+id/id_lite_pal_activity_btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update data"/>
    <Button
        android:id="@+id/id_lite_pal_activity_btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete data"/>
    <Button
        android:id="@+id/id_lite_pal_activity_btn_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="query data"/>

</LinearLayout>