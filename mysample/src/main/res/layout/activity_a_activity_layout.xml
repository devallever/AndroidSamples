<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorGreen700">

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_below="@id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_activity_a_activity_btn_explode"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="分解"
            android:onClick=""/>
        <Button
            android:id="@+id/id_activity_a_activity_btn_slide"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="滑动"/>
        <Button
            android:id="@+id/id_activity_a_activity_btn_fade"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="淡出"
            android:onClick=""/>
        <Button
            android:id="@+id/id_activity_a_activity_btn_share"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:transitionName="share"
            android:text="share"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/id_activity_a_activity_fab"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:transitionName="fab"
            android:background="@color/colorGreen700"
            android:src="@android:drawable/arrow_down_float"/>

    </LinearLayout>

</RelativeLayout>