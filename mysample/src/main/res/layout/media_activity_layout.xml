<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_media_activity_send_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send notification"/>

    <Button
        android:id="@+id/id_media_activity_btn_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="camera demo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="audio:"/>
        <Button
            android:id="@+id/id_media_activity_btn_audio_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="play"/>
        <Button
            android:id="@+id/id_media_activity_btn_audio_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="pause"/>
        <Button
            android:id="@+id/id_media_activity_btn_audio_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="stop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="video:"/>
        <Button
            android:id="@+id/id_media_activity_btn_video_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="play"/>
        <Button
            android:id="@+id/id_media_activity_btn_video_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="pause"/>
        <Button
            android:id="@+id/id_media_activity_btn_video_resume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="stop"/>

    </LinearLayout>
    <VideoView
        android:id="@+id/id_media_activity_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>